<div class="login-container">
  <h2>Registrieren</h2>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name, class: 'sr-only' %>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-user"></i></span>
        <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :email, class: 'sr-only' %>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password, class: 'sr-only' %>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <%= f.password_field :password, class: 'form-control', placeholder: 'Passwort' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :password_confirmation, class: 'sr-only' %>
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-lock"></i></span>
        <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Passwort wiederholen' %>
      </div>
    </div>
    <%= f.submit 'Registrieren', class: 'btn btn-primary btn-block' %>
  <% end %>
